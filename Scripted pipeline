pipeline {
    
    agent any
    tools {
        maven 'maven'
    }
    stages {
        
        stage("git clone") {
            
            steps {
                echo "cloneing the code"
                git 'https://github.com/gannapraveen/New-scripted-pipeline.git'
            }
        }
        stage("validate") {
            
            steps {
                echo "validating the code"
                bat "mvn validate"
            }
        }
        
        stage("compile") {
            
            steps {
                echo "compiling the code"
                bat "mvn compile"
            }
        }
        
        stage("test") {
            
            steps {
                echo "testing the code"
                bat "mvn test"
            }
        }
        
        stage("package") {
            
            steps {
                echo "packaging the code"
                bat "mvn package"
            }
        }
        
        stage("verify") {
            
            steps {
                echo "verifying the code"
                bat "mvn verify"
            }
        }
        
        stage("install") {
            
            steps {
                echo "installing the code"
                bat "mvn install"
            }
        }
        
        stage("deploy") {
            
            steps {
                echo "deploying the code"
                //bat "mvn deploy"
            }
        }
        
        stage("clean") {
            
            steps {
                echo "cleaning the code"
                bat "mvn clean"
            }
        }
        
        stage("site") {
            
            steps {
                echo "deploying the code"
                bat "mvn site"
            }
        }
    }
}
